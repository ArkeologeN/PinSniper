{
  "name": "pinSniper",
  "description": "Instantly sort your pins!",
  "version": "0.1",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "img-16.png",
    "default_title": "pinSniper",
    "default_popup": "popup.html"
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "content_scripts": [{
      "matches": ["file:///*"],
      "all_frames": true,
      "js":      ["jquery-1.11.2.min.js","content.js"]
  }],
  "permissions": [
      "activeTab", "tabs", "http://*/*", "https://*/*"
  ],
  "icons": { "16": "img-16.png", "128": "img-128.png" }
}